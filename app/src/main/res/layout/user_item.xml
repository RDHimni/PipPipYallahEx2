<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/FirstNameTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="sans-serif"
        android:text="[First name]"
        android:textColor="@color/black"
        app:layout_constraintWidth_percent=".9"
        android:textSize="@dimen/_18sdp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0" />

    <TextView
        android:id="@+id/EmailTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_6sdp"
        android:fontFamily="sans-serif"
        android:text="[Email.]"
        android:textColor="@color/black"
        android:textSize="@dimen/_14sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@+id/FirstNameTv"
        app:layout_constraintTop_toBottomOf="@+id/FirstNameTv"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintWidth_percent=".9" />

    <ImageView
        android:id="@+id/avatarIMv"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@+id/EmailTv"
        app:layout_constraintTop_toBottomOf="@+id/EmailTv"
        app:layout_constraintVertical_bias="0"
        app:srcCompat="@drawable/ic_avatar" />

    <TextView
        android:id="@+id/NumberPhoneTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="[number phone]"
        android:textColor="#257CC1"
        android:fontFamily="sans-serif"
        app:layout_constraintWidth_percent=".6"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginStart="@dimen/_10sdp"
        android:textSize="@dimen/_13sdp"
        app:layout_constraintBottom_toBottomOf="@+id/avatarIMv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/avatarIMv"
        app:layout_constraintTop_toTopOf="@+id/avatarIMv" />





    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#8C8A8A"
        app:layout_constraintVertical_bias="0"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/avatarIMv" />

</androidx.constraintlayout.widget.ConstraintLayout>